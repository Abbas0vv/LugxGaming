@model List<Game>

<div class="container mt-5">
    <h2 class="mb-4 text-white">Oyunlar Listesi</h2>

    <a asp-action="Create" class="btn btn-success mb-3">Yeni Oyun Ekle</a>

    <div class="table-responsive">
        <table class="table table-dark table-striped table-hover align-middle">
            <thead class="table-primary">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Oyun İsmi</th>
                    <th scope="col">Fiyat</th>
                    <th scope="col">Hakkında</th>
                    <th scope="col">Görsel</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int counter = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@item.Name</td>
                        <td>₺@item.Price</td>
                        <td>@item.Description</td>
                        <td>
                            <img style="width:100px" src="~/Uploads/Game/@item.ImageUrl" alt="@item.Name" />
                        </td>
                        <td>
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">Güncelle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bu oyunu silmek istediğinizden emin misiniz?');">Sil</a>
                        </td>
                    </tr>

                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>
